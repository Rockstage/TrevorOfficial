

    <!-- Carousel
    ================================================== -->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1" class=""></li>
        <li data-target="#myCarousel" data-slide-to="2" class=""></li>
        <li data-target="#myCarousel" data-slide-to="3" class=""></li>
        <li data-target="#myCarousel" data-slide-to="4" class=""></li>
        <li data-target="#myCarousel" data-slide-to="5" class=""></li>
      </ol>
      <div class="carousel-inner" role="listbox">

        <div class="item active" style="background-image: url('<%= image_url('S1.png') %>');">
          
          <div class="container">
            <div class="carousel-caption">
              <h1>Success is a mindset.</h1>
              <p>Trevor helps you set clear goals with visually defined timelines<br/>so you can boldly follow your own path to success.</p>
            </div>
          </div>
        </div>

        <div class="item" style="background-image: url('<%= image_url('S2.png') %>');">
          <% if false %><%= image_tag('S2.png', style: "width: 100%;") %><% end %>
          <div class="container">
            <div class="carousel-caption">
              <h1>Embrace the chaos.</h1>
              <p>Trevor helps you centralize all the aspects of your life into one elegant system.</p>
            </div>
          </div>
        </div>

        <div class="item" style="background-image: url('<%= image_url('S3.png') %>');">
          
          <div class="container">
            <div class="carousel-caption">
              <h1>Leadership is from within.</h1>
              <p>Trevor helps you achieve business goals in realtime and track performance anytime.<br/>Empower your team, and let Trevor empower you.</p>
            </div>
          </div>
        </div>

        <div class="item" style="background-image: url('<%= image_url('S4.png') %>');">
          
          <div class="container">
            <div class="carousel-caption">
              <h1>Intelligence is your weapon.</h1>
              <p>Having your personal assistant anytime, anywhere gives you<br/>the competitive advantage you need.</p>
              <% if false %> cutting edge for supremacy. <% end %>
            </div>
          </div>
        </div>

        <div class="item" style="background-image: url('<%= image_url('S5.png') %>');">
          
          <div class="container">
            <div class="carousel-caption">
              <h1>Take a moment to yourself.</h1>
              <p>And let Trevor do his thing...
              <p><%= link_to image_tag('iPhoneStore.png', class: 'storeButton'), root_url %></p>
            </div>
          </div>
        </div>

        <div class="item" style="background-image: url('<%= image_url('SlideTeam.jpg') %>');">
          
          <div class="container">
            <div class="carousel-caption">
              <h1><a href="#">Play video</a></h1>
              <p>and<br /><a href="#">Read the latest news.</a></p>
              <p><br/><br/><%= link_to image_tag('iPhoneStore.png', class: 'storeButton'), root_url %></p>
            </div>
          </div>
        </div>

      </div>
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div><!-- /.carousel -->



